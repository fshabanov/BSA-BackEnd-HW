{
	"name": "hw-backend-stucture",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon index.js",
		"docker:dev:db": "docker-compose up hw_db",
		"docker:build": "docker-compose build",
		"generate:migration": "knex migrate:make",
		"generate:seed": "knex seed:make",
		"migrate:latest": "knex migrate:latest",
		"migrate:unlock": "knex migrate:unlock",
		"seed": "knex seed:run",
		"reset:db": "knex migrate:rollback && npm run migrate:latest && npm run seed",
		"test": "npm run reset:db && mocha ./tests/index.test.js --exit",
		"test:bet": "npm run reset:db && mocha ./tests/bet.test.js --exit",
		"docker:test:db": "docker-compose -f docker-compose.test.yml up -d hw_db_test",
		"docker:test": "docker-compose -f docker-compose.test.yml up hm_test"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"dotenv": "10.0.0",
		"eslint-config-airbnb": "^19.0.4",
		"express": "4.17.1",
		"joi": "17.4.0",
		"jsonwebtoken": "8.5.1",
		"knex": "0.95.6",
		"morgan": "^1.10.0",
		"pg": "8.6.0"
	},
	"devDependencies": {
		"chai": "4.3.4",
		"chai-http": "4.3.0",
		"eslint": "^8.20.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"mocha": "9.0.1",
		"nodemon": "2.0.7"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
